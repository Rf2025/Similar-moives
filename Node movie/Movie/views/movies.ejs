<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/Movie/public/styles.css">
    <title>Similar Movies</title>
</head>
<body>
    <style>
        h3{
            color:#073887;
        }
        p{
            color: #272d33;
            font-weight: bold;
        }
        h1{
            color:#052963;
            font-weight: bold;
            
        }
        *{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    
}
      body{
       text-align: center;
       background-color: #707786 ;
}
.movie{
    box-shadow: 5px 5px 5px 5px #ebeced;
    width:100%;
    overflow: scroll;
     height:420px;
    color: #272d33;
    text-align: center;
    border-radius: 10px;
    padding:20px;
    margin: 20px;
    background-color: rgb(221, 220, 220);
    padding-bottom:5rem;
}

@media(max-width:820px){
    .movie-container{
        display: grid;
        grid-template-columns: repeat(2,400px);
    grid-template-rows: repeat(2,400px);

    }
  
  }
  @media(max-width:380px){
    .movie-container{
        display: grid;
        grid-template-columns: repeat(1,300px);
        row-gap:1rem;
    column-gap: 1rem;
 
    }
    .movie{
        width: 70%;
        
    }
  }
.movie:hover{
    transform: scale(1.1);
    opacity: .9;
    transition-duration: 800ms;
}
.movie-container{
    display: grid;
    row-gap:5%;
    column-gap: 2%;
    padding-bottom: 25px;
    margin-bottom: 30px;
    background-color:#f8f9fa;
    width: 100%;
    justify-content: center;
    grid-template-columns: repeat(4,400px);
    grid-template-rows: repeat(4,400px);
    align-items: baseline;
   margin-top:7%;
   border-top: 1px solid #144da8;
}
.movie-img{
    width:100%;
      height:auto;
      border-radius: 8px;
     object-fit:contain;
}
form{
    padding-top: 5rem;
    align-items: center;
    position:relative;
}
input{
    border-radius: 7px;
    width: 20%;
    height: 30px;
    margin: 10px;
    color:whitesmoke;
   border:none;
    border: 1px solid #dddada;;
   border-radius: 28px;
   background-color: transparent;
  border-color: 1px solid #144da8;
  outline: none;
  padding: 10px;
}
button{
    width:8.4rem;
    height:2.5rem;

    color:whitesmoke;
    background-color:#144da8;
    border:1px solid #f8f9fa;
    border-radius:6px;
  margin-top:20px;
    
}
button:hover{
    transform: scale(1.1);
    opacity: .9;
    transition-duration: 500ms;
}
    </style>
    <h1>Search Similar Movies!</h1>
    
    <form action="/search" method="post">
        <input type="text" name="userInput" placeholder="Enter movie">
        <button type="submit">Search</button>
    </form>

    <div class="movie-container">
        <% if (movies && movies.length > 0) { %>
            <% movies.forEach(movie => { %>
                <div class="movie">
                    <h3><%= movie.title %></h3>
                    <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="<%= movie.title %>" class="movie-img">
                    <p><%= movie.overview %></p>
                </div>
            <% }); %>
        <% } else { %>
           
        <% } %>
    </div>

   
</body>
</html>
